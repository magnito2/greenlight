<div class="background">
  <div class="background-image">
  <div class="container pt-9 pb-8">
    <div class="row">
      <div class="col-md-12 col-sm-12 text-center">
        <h1 id="main-text" class="display-4 mb-4">Welcome to Technology Quest</h1>
        <p class="lead offset-lg-2 col-lg-8 col-sm-12 ">Keep on learning</p>
      </div>
    </div>
  </div>
</div>
<% if !@school.blank? %>
<div class="container pt-9 pb-8">
  <div class="row">
    <div class="col-md-6 col-sm-12 offset-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Active classes</h3>
        </div>
        <div class="card-body">
          <h3 class="card-title">
            <% if !@active_rooms.blank? %>Active Rooms in <%= @school.name %>
            <% else %> The is no class currently going on, you can refresh this tab after a few minutes to check again <% end %>
          </h3>
          <% if !@active_rooms.blank? %>
            <ul class="list-group w-75">
                <% @active_rooms.each do |room| %>
                    <%= link_to room_path(room), class: "list-group-item list-group-item-action dropdown-item"  do %>
                        <%= room.name + " by " + room.owner.name %>
                    <% end %>
                <% end %>
            </ul>
          <% end %>
        </div>
      </div>
    <div>
  </div>
</div>
</div>
<% end %>
