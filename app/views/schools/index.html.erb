<div class="container h-100">

  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-lg-3 mb-4">
          <%= render "admins/components/menu_buttons" %>
        </div>
        <div class="col-lg-9">
          <div class="card h-100">
            <div class="card-header">
              <div class="card-title">Schools</div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover table-outline table-vcenter card-table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @schools.each do |school| %>
                      <tr>
                        <td><%= school.name %></td>
                        <td><%= link_to 'Show', school %></td>
                        <td><%= link_to 'Edit', edit_school_path(school) %></td>
                        <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>

                <%= link_to 'New School', new_school_path, class: "btn btn-outline-primary mt-2" %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
