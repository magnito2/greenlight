<div class="container h-100">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-lg-3 mb-4">
          <%= render "admins/components/menu_buttons" %>
        </div>
        <div class="col-7">
          <div class="card">
            <div class="card-header">
              <h4 class="mt-2">Editing School</h4>
            </div>
            <div class="card-body background">
              <%= render 'form', school: @school %>
            </div>
          </div>
          <%= link_to 'Show', @school, class: "btn btn-outline-primary mt-2" %>
          <%= link_to 'Back', schools_path, class: "btn btn-outline-primary mt-2"  %>
        </div>
      </div>
    </div>
  </div>
</div>
